<h1>Schools</h1>
<% if can? :create, School %>
  <%= link_to 'New School', new_school_path %>
<% end %>

<table id="schools_index" class="table table-hover table-sm">
  <thead class="thead-light">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Short name</th>
      <% if can? :manage, School %>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= link_to school.name, school %></td>
        <td><%= school.short_name %></td>
        <% if can? :manage, School %>
          <td><%= link_to 'Edit', edit_school_path(school) %></td>
          <td><%= link_to 'Delete', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>

  <tfoot>
    <tr>
      <th>Name</th>
      <th>Short name</th>
    </tr>
  </tfoot>
</table>
